<style>
body {background-color: #EEFFFF}
body {text-align: center}
h1 {color: red}
</style>


<p id="notice"><%= notice %></p>

<h1>Listing Weights</h1>

<center><table>
  <thead>
    <tr>
      <th>Weight amount</th>
      <th>Weight on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weights.each do |weight| %>
      <tr>
        <td><%= weight.weight_amount %></td>
        <td><%= weight.weight_on %></td>
        <td><%= link_to 'Show', weight %></td>
        <td><%= link_to 'Edit', edit_weight_path(weight) %></td>
        <td><%= link_to 'Destroy', weight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></center>

<br>

<%= link_to 'New Weight', new_weight_path %>
<div>
<p><%= link_to 'Home', :root %></p>
</div>

<div>
  <p> Your weight difference is: <%= @weight_amount %></p>

</div>
