<p id="notice"><%= notice %></p>
<h1>Listing Calories</h1>

<table>
  <thead>
    <tr>
      <th>Consumed calories</th>
      <th>Added on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @joules.each do |joule| %>
      <tr>
        <td><%= joule.consumed_joules %></td>
        <td><%= joule.added_on %></td>
        <td><%= link_to 'Show', joule %></td>
        <td><%= link_to 'Edit', edit_joule_path(joule) %></td>
        <td><%= link_to 'Destroy', joule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Consumed Calories', new_joule_path %>
