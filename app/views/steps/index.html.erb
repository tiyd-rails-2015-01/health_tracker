<style>
body {background-color: #EEFFFF}
</style>

<style>
h1 {color: red}
</style>
<p id="notice"><%= notice %></p>

<h1>Listing Steps</h1>

<table>
  <thead>
    <tr>
      <th>Step amount</th>
      <th>Step on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.step_amount %></td>
        <td><%= step.step_on %></td>
        <td><%= link_to 'Show', step %></td>
        <td><%= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_step_path %>
<div>
<p><%= link_to 'Home', :root %></p>
</div>

<div>
  <p> Your total steps thus far: <%= @step_amount %></p>
</div>
